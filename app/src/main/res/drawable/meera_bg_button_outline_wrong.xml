<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/uiKitColorBackgroundPrimary" />
            <stroke android:width="1dp" android:color="@color/uiKitColorDisabledSecondary" />
            <corners android:radius="@dimen/button_corners_radius" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/uiKitColorAccentWrong" />
            <solid android:color="@color/uiKitColorAccentPrimaryPale" />
            <corners android:radius="@dimen/button_corners_radius" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/uiKitColorAccentWrong" />
            <solid android:color="@color/uiKitColorAccentPrimaryPale" />
            <corners android:radius="@dimen/button_corners_radius" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/uiKitColorAccentWrong" />
            <corners android:radius="@dimen/button_corners_radius" />
        </shape>
    </item>
</selector>
