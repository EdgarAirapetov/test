<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="200dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="@color/ui_black_70"
                android:type="linear" />
        </shape>
    </item>

    <item android:top="-200dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@color/ui_black_70"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
