<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient android:angle="180" android:centerColor="#8d6df3" android:centerX="0.3" android:centerY="0.3" android:endColor="#a78af7" android:startColor="#6d4ada" android:type="linear" android:useLevel="true" />
        </shape>
    </item>
    <item android:state_selected="false">
        <shape>
            <solid android:color="@color/ui_white" />
            <corners android:radius="10dp" />
            <stroke android:width="1dp" android:color="#9f9caa" />
        </shape>
    </item>
</selector>

