<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/map_item_event_type_height"
    android:layout_marginEnd="8dp"
    android:background="@drawable/bg_item_map_event_configuration"
    android:minWidth="@dimen/map_item_event_configuration_width"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingTop="8dp"
    android:paddingEnd="12dp"
    android:paddingBottom="0dp">

    <com.numplates.nomera3.presentation.view.widgets.VipView
        android:id="@+id/vv_post_header_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_horizontal_content_short"
        android:layout_marginTop="@dimen/margin_vertical_content_short"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintStart_toEndOf="@id/iv_post_header_back"
        app:layout_constraintTop_toTopOf="parent"
        app:size="SIZE_60" />

    <ImageView
        android:id="@+id/iv_item_map_event_type_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        tools:src="@drawable/ic_map_event_education" />

    <TextView
        android:id="@+id/tv_item_map_event_type_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textAppearance="@style/BlackRegular16"
        android:textColor="@color/color_soft_black"
        tools:text="@string/map_events_type_education" />

</LinearLayout>
