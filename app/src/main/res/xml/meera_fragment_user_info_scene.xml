<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/scene_user_info_start">

        <Constraint
            android:id="@+id/lav_stars"
            android:layout_width="0dp"
            android:layout_height="180dp"
            app:layout_constraintBottom_toBottomOf="@id/userpic_user_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/userpic_user_photo" />

        <Constraint
            android:id="@+id/fl_bell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintEnd_toStartOf="@id/button_user_info_menu"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityMode="ignore" />

        <Constraint
            android:id="@+id/button_user_info_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="24dp"
            app:visibilityMode="ignore"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/fl_left_top"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="-38dp"
            app:layout_constraintEnd_toStartOf="@id/userpic_user_photo"
            app:layout_constraintTop_toTopOf="@id/userpic_user_photo" />

        <Constraint
            android:id="@+id/fl_left_bottom"
            android:layout_width="94dp"
            android:layout_height="94dp"
            android:layout_marginEnd="-30dp"
            android:layout_marginBottom="22dp"
            app:layout_constraintBottom_toBottomOf="@id/userpic_user_photo"
            app:layout_constraintEnd_toStartOf="@id/userpic_user_photo" />

        <Constraint
            android:id="@+id/fl_right_top"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="-26dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toEndOf="@id/userpic_user_photo"
            app:layout_constraintTop_toTopOf="@id/userpic_user_photo" />

        <Constraint
            android:id="@+id/fl_photos_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="-6dp"
            app:layout_constraintEnd_toEndOf="@id/fl_right_top"
            app:layout_constraintTop_toTopOf="@id/fl_right_top" />

        <Constraint
            android:id="@+id/fl_right_bottom"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_marginStart="-16dp"
            android:layout_marginBottom="26dp"
            app:layout_constraintBottom_toBottomOf="@id/userpic_user_photo"
            app:layout_constraintStart_toEndOf="@id/userpic_user_photo" />


        <Constraint
            android:id="@+id/userpic_user_photo"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="56dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:userpicSize="Size180" />

        <Constraint
            android:id="@+id/fl_add_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/userpic_user_photo"
            app:layout_constraintEnd_toEndOf="@id/userpic_user_photo" />

        <Constraint
            android:id="@+id/username_user_info"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:text="@string/name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userpic_user_photo"
            app:layout_constraintWidth_default="wrap">
            <CustomAttribute
                app:attributeName="textAppearance"
                app:customReference="@style/UiKit.Header.H2" />
            <CustomAttribute
                app:attributeName="textSize"
                app:customFloatValue="24" />
        </Constraint>

        <Constraint
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/username_user_info" />


        <Constraint
            android:id="@+id/rv_user_info"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_username" />

        <Constraint
            android:id="@+id/fl_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/fl_chat"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@+id/fl_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/uiKitColorForegroundLightGreen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/fl_call" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/scene_user_info_middle">

        <Constraint
            android:id="@+id/lav_stars"
            android:layout_width="0dp"
            android:layout_height="180dp"
            app:layout_constraintBottom_toBottomOf="@id/userpic_user_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/userpic_user_photo" />

        <Constraint
            android:id="@+id/fl_bell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintEnd_toStartOf="@id/button_user_info_menu"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityMode="ignore" />

        <Constraint
            android:id="@+id/button_user_info_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="12dp"
            app:visibilityMode="ignore"
            android:layout_marginBottom="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/fl_left_top"
            android:layout_width="82dp"
            android:layout_height="82dp"
            app:layout_constraintBottom_toBottomOf="@id/userpic_user_photo"
            app:layout_constraintEnd_toEndOf="@id/userpic_user_photo"
            app:layout_constraintStart_toStartOf="@id/userpic_user_photo"
            app:layout_constraintTop_toTopOf="@id/userpic_user_photo" />

        <Constraint
            android:id="@+id/fl_left_bottom"
            android:layout_width="94dp"
            android:layout_height="94dp"
            app:layout_constraintBottom_toBottomOf="@id/userpic_user_photo"
            app:layout_constraintEnd_toEndOf="@id/userpic_user_photo"
            app:layout_constraintStart_toStartOf="@id/userpic_user_photo"
            app:layout_constraintTop_toTopOf="@id/userpic_user_photo" />

        <Constraint
            android:id="@+id/fl_photos_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="-6dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@id/fl_right_top"
            app:layout_constraintTop_toTopOf="@id/fl_right_top" />

        <Constraint
            android:id="@+id/fl_right_top"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintBottom_toBottomOf="@id/userpic_user_photo"
            app:layout_constraintEnd_toEndOf="@id/userpic_user_photo"
            app:layout_constraintStart_toStartOf="@id/userpic_user_photo"
            app:layout_constraintTop_toTopOf="@id/userpic_user_photo" />


        <Constraint
            android:id="@+id/fl_right_bottom"
            android:layout_width="82dp"
            android:layout_height="82dp"
            app:layout_constraintBottom_toBottomOf="@id/userpic_user_photo"
            app:layout_constraintEnd_toEndOf="@id/userpic_user_photo"
            app:layout_constraintStart_toStartOf="@id/userpic_user_photo"
            app:layout_constraintTop_toTopOf="@id/userpic_user_photo" />


        <Constraint
            android:id="@+id/userpic_user_photo"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/fl_add_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/userpic_user_photo"
            app:layout_constraintEnd_toEndOf="@id/userpic_user_photo" />

        <Constraint
            android:id="@+id/username_user_info"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userpic_user_photo"
            app:layout_constraintWidth_default="wrap">
            <CustomAttribute
                app:attributeName="textAppearance"
                app:customReference="@style/UiKit.Header.H2" />
            <CustomAttribute
                app:attributeName="textSize"
                app:customFloatValue="24" />
        </Constraint>

        <Constraint
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/username_user_info" />

        <Constraint
            android:id="@+id/rv_user_info"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_username" />

        <Constraint
            android:id="@+id/fl_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/fl_chat"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@+id/fl_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/uiKitColorForegroundLightGreen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/fl_call" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/scene_user_info_end">

        <Constraint
            android:id="@+id/lav_stars"
            android:layout_width="0dp"
            android:layout_height="180dp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@+id/fl_bell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="26dp"
            app:layout_constraintEnd_toStartOf="@id/button_user_info_menu"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityMode="ignore" />

        <Constraint
            android:id="@+id/button_user_info_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="26dp"
            app:visibilityMode="ignore"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/fl_left_top"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/userpic_user_photo"
            app:layout_constraintEnd_toEndOf="@id/userpic_user_photo"
            app:layout_constraintStart_toStartOf="@id/userpic_user_photo"
            app:layout_constraintTop_toTopOf="@id/userpic_user_photo" />

        <Constraint
            android:id="@+id/fl_left_bottom"
            android:layout_width="94dp"
            android:layout_height="94dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/userpic_user_photo"
            app:layout_constraintEnd_toEndOf="@id/userpic_user_photo"
            app:layout_constraintStart_toStartOf="@id/userpic_user_photo"
            app:layout_constraintTop_toTopOf="@id/userpic_user_photo" />

        <Constraint
            android:id="@+id/fl_photos_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/userpic_user_photo"
            app:layout_constraintEnd_toEndOf="@id/userpic_user_photo"
            app:layout_constraintStart_toStartOf="@id/userpic_user_photo"
            app:layout_constraintTop_toTopOf="@id/userpic_user_photo" />

        <Constraint
            android:id="@+id/fl_right_top"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/userpic_user_photo"
            app:layout_constraintEnd_toEndOf="@id/userpic_user_photo"
            app:layout_constraintStart_toStartOf="@id/userpic_user_photo"
            app:layout_constraintTop_toTopOf="@id/userpic_user_photo" />


        <Constraint
            android:id="@+id/fl_right_bottom"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/userpic_user_photo"
            app:layout_constraintEnd_toEndOf="@id/userpic_user_photo"
            app:layout_constraintStart_toStartOf="@id/userpic_user_photo"
            app:layout_constraintTop_toTopOf="@id/userpic_user_photo" />


        <Constraint
            android:id="@+id/userpic_user_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="48dp"
            app:layout_constraintBottom_toBottomOf="@id/button_user_info_menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/button_user_info_menu" />

        <Constraint
            android:id="@+id/fl_add_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/userpic_user_photo"
            app:layout_constraintEnd_toEndOf="@id/userpic_user_photo"
            app:layout_constraintStart_toStartOf="@id/userpic_user_photo"
            app:layout_constraintTop_toTopOf="@id/userpic_user_photo" />

        <Constraint
            android:id="@+id/username_user_info"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/name"
            app:layout_constraintBottom_toBottomOf="@id/userpic_user_photo"
            app:layout_constraintEnd_toStartOf="@id/fl_bell"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/userpic_user_photo"
            app:layout_constraintTop_toTopOf="@id/userpic_user_photo"
            app:layout_constraintWidth_default="wrap">
            <CustomAttribute
                app:attributeName="textAppearance"
                app:customReference="@style/UiKit.Display.Medi_14" />
            <CustomAttribute
                app:attributeName="textSize"
                app:customFloatValue="14" />
        </Constraint>

        <Constraint
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/username_user_info" />

        <Constraint
            android:id="@+id/rv_user_info"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_username" />

        <Constraint
            android:id="@+id/fl_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/fl_chat"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@+id/fl_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/uiKitColorForegroundLightGreen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/fl_call" />

    </ConstraintSet>

    <Transition
        android:id="@+id/transition_user_info_start_to_middle"
        app:constraintSetEnd="@id/scene_user_info_middle"
        app:constraintSetStart="@id/scene_user_info_start"
        app:duration="500"
        app:layoutDuringTransition="honorRequest">


        <KeyFrameSet>
            <KeyAttribute
                app:framePosition="0"
                app:motionTarget="@+id/fl_add_photo">
                <CustomAttribute
                    app:attributeName="alpha"
                    app:customFloatValue="1" />
            </KeyAttribute>
            <KeyAttribute
                app:framePosition="50"
                app:motionTarget="@+id/fl_add_photo">
                <CustomAttribute
                    app:attributeName="alpha"
                    app:customFloatValue="0" />
            </KeyAttribute>
        </KeyFrameSet>

        <KeyFrameSet>
            <KeyAttribute
                app:framePosition="0"
                app:motionTarget="@+id/fl_photos_counter">
                <CustomAttribute
                    app:attributeName="alpha"
                    app:customFloatValue="1" />
            </KeyAttribute>
            <KeyAttribute
                app:framePosition="50"
                app:motionTarget="@+id/fl_photos_counter">
                <CustomAttribute
                    app:attributeName="alpha"
                    app:customFloatValue="0" />
            </KeyAttribute>
        </KeyFrameSet>


        <OnSwipe
            app:dragDirection="dragUp"
            app:moveWhenScrollAtTop="true"
            app:touchAnchorId="@id/rv_user_info" />
    </Transition>

    <Transition
        android:id="@+id/transition_user_info_middle_to_end"
        app:constraintSetEnd="@id/scene_user_info_end"
        app:constraintSetStart="@id/scene_user_info_middle"
        app:duration="500"
        app:layoutDuringTransition="honorRequest">
        <KeyFrameSet>
            <KeyAttribute
                app:framePosition="0"
                app:motionTarget="@+id/fl_add_photo">
                <CustomAttribute
                    app:attributeName="alpha"
                    app:customFloatValue="0" />
            </KeyAttribute>
            <KeyAttribute
                app:framePosition="0"
                app:motionTarget="@+id/fl_photos_counter">
                <CustomAttribute
                    app:attributeName="alpha"
                    app:customFloatValue="0" />
            </KeyAttribute>

        </KeyFrameSet>
        <OnSwipe
            app:dragDirection="dragUp"
            app:moveWhenScrollAtTop="true"
            app:touchAnchorId="@id/rv_user_info" />
    </Transition>
</MotionScene>
