<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tab_title"
        style="@style/UiKit.Display.Caps_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:textColor="@drawable/meera_selector_tab_text_rooms_container"
        tools:text="Tab title" />

    <TextView
        android:id="@+id/tab_count"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/meera_circle_unselected_count_tab_bg"
        android:ellipsize="end"
        android:fontFamily="@font/source_sanspro_semibold"
        android:gravity="center"
        android:lines="1"
        android:textColor="@color/uiKitColorForegroundSecondary"
        android:textSize="12sp"
        android:visibility="gone"
        tools:ignore="SmallSp"
        tools:text="+22"
        tools:visibility="visible" />
</LinearLayout>
