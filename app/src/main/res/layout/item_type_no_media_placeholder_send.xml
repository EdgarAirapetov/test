<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_chat_message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="124dp">

        <FrameLayout
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:layout_gravity="end"
            android:layout_marginEnd="42dp"
            android:background="@drawable/chat_message_shape_my">

            <FrameLayout
                android:id="@+id/placeholder_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/no_chat_media_placeholder_bgr"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/no_chat_media_placeholder" />

            <TextView
                android:id="@+id/tv_chat_time"
                style="@style/WhiteRegular14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:background="@drawable/transparent_black_rect"
                android:layout_gravity="bottom|end"
                tools:text="0:00" />

        </FrameLayout>

        <ImageView
            android:id="@+id/iv_sender_simple_image_message_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_send_error"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="16dp" />

    </FrameLayout>

</LinearLayout>
