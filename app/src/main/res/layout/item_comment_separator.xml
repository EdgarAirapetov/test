<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:clickable="true"
	android:focusable="true"
	android:layout_height="wrap_content">

	<com.airbnb.lottie.LottieAnimationView
		android:id="@+id/lav_progress_indicator"
		android:layout_width="40dp"
		android:layout_height="35dp"
		android:visibility="gone"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="96dp"
		android:layout_marginVertical="8dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="5dp"
        android:background="@drawable/bg_comment_separator"
		android:fontFamily="@font/source_sanspro_semibold"
		android:textColor="@color/uiKitColorForegroundPrimary"
		android:textSize="14sp"
        android:textAppearance="@style/UiKit.Body.Description"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="@string/hide_all_answers" />

</androidx.constraintlayout.widget.ConstraintLayout>
