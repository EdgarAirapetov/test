<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="4dp"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:orientation="vertical"
    >

    <com.numplates.nomera3.presentation.view.widgets.VipView
        android:id="@+id/search_recent_item_avatar_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        app:size="SIZE_70"
        tools:background="@drawable/rounded_gradient"
        tools:layout_height="70dp"
        tools:layout_width="70dp"
        />

    <TextView
        android:id="@+id/search_recent_item_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:lineHeight="18sp"
        android:textAlignment="center"
        android:textAppearance="@style/BlackRegular14"
        tools:text="Иван Иванов"
        />

</LinearLayout>
