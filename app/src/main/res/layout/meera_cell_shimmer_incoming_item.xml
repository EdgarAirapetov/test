<?xml version="1.0" encoding="utf-8"?><!--<LinearLayout-->
<com.facebook.shimmer.ShimmerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vg_cell_shimmer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/v_image_shimmer"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/circle_shimmer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/v_first_line_shimmer"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/line_shimmer"
        app:layout_constraintStart_toEndOf="@+id/v_image_shimmer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <View
        android:id="@+id/v_second_line_shimmer"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="179dp"
        android:background="@drawable/line_shimmer"
        app:layout_constraintStart_toEndOf="@+id/v_image_shimmer"
        app:layout_constraintTop_toBottomOf="@+id/v_first_line_shimmer"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/v_third_line_shimmer"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="179dp"
        android:background="@drawable/line_shimmer"
        app:layout_constraintStart_toEndOf="@+id/v_image_shimmer"
        app:layout_constraintTop_toBottomOf="@+id/v_second_line_shimmer"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_image_shimmer">

        <View
            android:id="@+id/v_first_btn_shimmer"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/line_shimmer"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp" />

        <View
            android:id="@+id/v_second_btn_shimmer"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/line_shimmer"
            android:layout_marginEnd="12dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>

