<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:layout_marginStart="@dimen/padding20"
    android:layout_marginEnd="@dimen/padding20">

    <LinearLayout
        android:id="@+id/service_message_container"
        android:visibility="visible"
        tools:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/chat_message_shape_service"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_service_text"
            style="@style/ChatServiceMessageTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/material16"
            android:layout_marginEnd="@dimen/material16"
            android:padding="8dp"
            tools:text="Service message" />

    </LinearLayout>

</LinearLayout>



