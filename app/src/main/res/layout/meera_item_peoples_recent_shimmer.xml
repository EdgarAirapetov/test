<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vg_peoples_shimmer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp">

    <TextView
        android:id="@+id/tv_recent_users"
        style="@style/UiKit.Header.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="16dp"
        android:text="@string/search_recent_list_title"
        android:textColor="@color/uiKitColorForegroundPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/v_recent_shimmer_button"
                android:layout_width="83dp"
                android:layout_height="22dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="@color/shimmer_color"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/iv_peoples_shimmer_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/circle_shimmer"
                android:contentDescription="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/v_recent_shimmer_button" />

            <androidx.cardview.widget.CardView
                android:layout_width="72dp"
                android:layout_height="8dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/shimmer_color"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="@id/iv_peoples_shimmer_icon"
                app:layout_constraintStart_toStartOf="@id/iv_peoples_shimmer_icon"
                app:layout_constraintTop_toBottomOf="@id/iv_peoples_shimmer_icon" />

            <androidx.cardview.widget.CardView
                android:layout_width="72dp"
                android:layout_height="8dp"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="@color/shimmer_color"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/iv_peoples_shimmer_icon"
                app:layout_constraintStart_toStartOf="@id/iv_peoples_shimmer_icon"
                app:layout_constraintTop_toBottomOf="@id/iv_peoples_shimmer_icon" />

            <View
                android:id="@+id/iv_peoples_shimmer_icon_two"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/circle_shimmer"
                android:contentDescription="@null"
                app:layout_constraintStart_toEndOf="@id/iv_peoples_shimmer_icon"
                app:layout_constraintTop_toBottomOf="@id/v_recent_shimmer_button" />

            <androidx.cardview.widget.CardView
                android:layout_width="72dp"
                android:layout_height="8dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/shimmer_color"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="@id/iv_peoples_shimmer_icon_two"
                app:layout_constraintStart_toStartOf="@id/iv_peoples_shimmer_icon_two"
                app:layout_constraintTop_toBottomOf="@id/iv_peoples_shimmer_icon_two" />

            <androidx.cardview.widget.CardView
                android:layout_width="72dp"
                android:layout_height="8dp"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="@color/shimmer_color"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/iv_peoples_shimmer_icon_two"
                app:layout_constraintStart_toStartOf="@id/iv_peoples_shimmer_icon_two"
                app:layout_constraintTop_toBottomOf="@id/iv_peoples_shimmer_icon_two" />

            <View
                android:id="@+id/iv_peoples_shimmer_icon_three"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/circle_shimmer"
                android:contentDescription="@null"
                app:layout_constraintStart_toEndOf="@id/iv_peoples_shimmer_icon_two"
                app:layout_constraintTop_toBottomOf="@id/v_recent_shimmer_button" />

            <androidx.cardview.widget.CardView
                android:layout_width="72dp"
                android:layout_height="8dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/shimmer_color"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="@id/iv_peoples_shimmer_icon_three"
                app:layout_constraintStart_toStartOf="@id/iv_peoples_shimmer_icon_three"
                app:layout_constraintTop_toBottomOf="@id/iv_peoples_shimmer_icon_three" />

            <androidx.cardview.widget.CardView
                android:layout_width="72dp"
                android:layout_height="8dp"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="@color/shimmer_color"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/iv_peoples_shimmer_icon_three"
                app:layout_constraintStart_toStartOf="@id/iv_peoples_shimmer_icon_three"
                app:layout_constraintTop_toBottomOf="@id/iv_peoples_shimmer_icon_three" />

            <View
                android:id="@+id/iv_peoples_shimmer_icon_four"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/circle_shimmer"
                android:contentDescription="@null"
                app:layout_constraintStart_toEndOf="@id/iv_peoples_shimmer_icon_three"
                app:layout_constraintTop_toBottomOf="@id/v_recent_shimmer_button" />

            <androidx.cardview.widget.CardView
                android:layout_width="72dp"
                android:layout_height="8dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/shimmer_color"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="@id/iv_peoples_shimmer_icon_four"
                app:layout_constraintStart_toStartOf="@id/iv_peoples_shimmer_icon_four"
                app:layout_constraintTop_toBottomOf="@id/iv_peoples_shimmer_icon_four" />

            <androidx.cardview.widget.CardView
                android:layout_width="72dp"
                android:layout_height="8dp"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="@color/shimmer_color"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/iv_peoples_shimmer_icon_four"
                app:layout_constraintStart_toStartOf="@id/iv_peoples_shimmer_icon_four"
                app:layout_constraintTop_toBottomOf="@id/iv_peoples_shimmer_icon_four" />

            <View
                android:id="@+id/iv_peoples_shimmer_icon_five"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/circle_shimmer"
                android:contentDescription="@null"
                app:layout_constraintStart_toEndOf="@id/iv_peoples_shimmer_icon_four"
                app:layout_constraintTop_toBottomOf="@id/v_recent_shimmer_button" />

            <androidx.cardview.widget.CardView
                android:layout_width="72dp"
                android:layout_height="8dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/shimmer_color"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="@id/iv_peoples_shimmer_icon_five"
                app:layout_constraintStart_toStartOf="@id/iv_peoples_shimmer_icon_five"
                app:layout_constraintTop_toBottomOf="@id/iv_peoples_shimmer_icon_five" />

            <androidx.cardview.widget.CardView
                android:layout_width="72dp"
                android:layout_height="8dp"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="@color/shimmer_color"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/iv_peoples_shimmer_icon_five"
                app:layout_constraintStart_toStartOf="@id/iv_peoples_shimmer_icon_five"
                app:layout_constraintTop_toBottomOf="@id/iv_peoples_shimmer_icon_five" />

            <View
                android:id="@+id/iv_peoples_shimmer_icon_six"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/circle_shimmer"
                android:contentDescription="@null"
                app:layout_constraintStart_toEndOf="@id/iv_peoples_shimmer_icon_five"
                app:layout_constraintTop_toBottomOf="@id/v_recent_shimmer_button" />

            <androidx.cardview.widget.CardView
                android:layout_width="72dp"
                android:layout_height="8dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/shimmer_color"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="@id/iv_peoples_shimmer_icon_six"
                app:layout_constraintStart_toStartOf="@id/iv_peoples_shimmer_icon_six"
                app:layout_constraintTop_toBottomOf="@id/iv_peoples_shimmer_icon_six" />

            <androidx.cardview.widget.CardView
                android:layout_width="72dp"
                android:layout_height="8dp"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="@color/shimmer_color"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/iv_peoples_shimmer_icon_six"
                app:layout_constraintStart_toStartOf="@id/iv_peoples_shimmer_icon_six"
                app:layout_constraintTop_toBottomOf="@id/iv_peoples_shimmer_icon_six" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

</FrameLayout>
