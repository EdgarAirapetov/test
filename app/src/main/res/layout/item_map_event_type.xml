<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="109dp"
    android:layout_height="@dimen/map_item_event_type_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_item_map_event_configuration"
    android:minWidth="@dimen/map_item_event_configuration_width"
    android:orientation="vertical"
    android:layout_marginEnd="14dp"
    android:paddingStart="12dp"
    android:paddingTop="8dp"
    android:paddingEnd="12dp"
    android:paddingBottom="0dp">

    <ImageView
        android:id="@+id/iv_item_map_event_type_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        tools:src="@drawable/ic_map_event_education" />

    <TextView
        style="@style/UiKit.Body.Description"
        android:id="@+id/tv_item_map_event_type_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        tools:text="@string/map_events_type_education" />
</LinearLayout>
