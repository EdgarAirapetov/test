<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:background="@drawable/meera_bg_services_user">

    <com.meera.uikit.widgets.userpic.UiKitUserpicImage
        android:id="@+id/upi_services_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:userpicSize="Size72" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@id/iv_services_user_arrow"
        app:layout_constraintStart_toEndOf="@id/upi_services_user"
        app:layout_constraintTop_toTopOf="parent">

        <com.meera.uikit.widgets.people.UiKitUsernameView
            android:id="@+id/unv_services_user"
            style="@style/UiKit.Body.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/uiKitColorForegroundPrimary"
            tools:text="Никита Романов" />

        <TextView
            android:id="@+id/tv_services_user_username"
            style="@style/UiKit.Body.Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/uiKitColorForegroundSecondary"
            tools:text="\@nikitaromanov" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_services_user_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_outlined_arrow_right_s"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/uiKitColorForegroundSecondary" />

</androidx.constraintlayout.widget.ConstraintLayout>
