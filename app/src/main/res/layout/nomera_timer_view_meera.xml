<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_day"
        android:layout_width="57dp"
        android:layout_height="66dp"
        app:cardBackgroundColor="#F5F6F7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="0dp"
        app:cardCornerRadius="12dp">
        <TextView
            android:id="@+id/tv_day"
            style="@style/UiKit.Header.H1"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textColor="#262626"
            android:gravity="center"
            android:text="29" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_hour"
        android:layout_width="57dp"
        android:layout_height="66dp"
        app:cardBackgroundColor="#F5F6F7"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toEndOf="@+id/cv_day"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="0dp"
        app:cardCornerRadius="12dp">
        <TextView
            android:id="@+id/tv_hour"
            style="@style/UiKit.Header.H1"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textColor="#262626"
            android:gravity="center"
            android:text="14" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_minute"
        android:layout_width="57dp"
        android:layout_height="66dp"
        android:layout_marginStart="24dp"
        app:cardBackgroundColor="#F5F6F7"
        app:layout_constraintStart_toEndOf="@+id/cv_hour"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="0dp"
        app:cardCornerRadius="12dp">
        <TextView
            android:id="@+id/tv_minute"
            style="@style/UiKit.Header.H1"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textColor="#262626"
            android:gravity="center"
            android:text="22" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_timer_day_meera"
        style="@style/UiKit.Body.Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timer_days"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/cv_day"
        app:layout_constraintStart_toStartOf="@+id/cv_day"
        app:layout_constraintTop_toBottomOf="@+id/cv_day" />

    <TextView
        android:id="@+id/tv_timer_hour_meera"
        style="@style/UiKit.Body.Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timer_hours"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/cv_hour"
        app:layout_constraintStart_toStartOf="@+id/cv_hour"
        app:layout_constraintTop_toBottomOf="@+id/cv_hour" />

    <TextView
        android:id="@+id/tv_timer_minute_meera"
        style="@style/UiKit.Body.Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timer_minutes"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/cv_minute"
        app:layout_constraintStart_toStartOf="@+id/cv_minute"
        app:layout_constraintTop_toBottomOf="@+id/cv_minute" />

</androidx.constraintlayout.widget.ConstraintLayout>
