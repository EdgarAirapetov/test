<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/about_fragment_image_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/meera_about_meera_screen_image_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/about_fragment_image"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:src="@drawable/meera_about_image"
        app:layout_constraintBottom_toBottomOf="@+id/about_fragment_image_bg"
        app:layout_constraintEnd_toEndOf="@+id/about_fragment_image_bg"
        app:layout_constraintStart_toStartOf="@+id/about_fragment_image_bg"
        app:layout_constraintTop_toTopOf="@+id/about_fragment_image_bg" />

    <TextView
        android:id="@+id/about_fragment_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:textSize="16sp"
        android:textAppearance="@style/UiKit.Body.Normal"
        android:textColor="@color/uiKitColorForegroundPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_fragment_image_bg"
        app:layout_constraintVertical_bias="0.0"
        tools:text="@string/about_noomeera_description" />

</androidx.constraintlayout.widget.ConstraintLayout>
