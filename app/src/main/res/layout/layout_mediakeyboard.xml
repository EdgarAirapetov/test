<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_recycler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="230dp"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:layout_behavior="com.numplates.nomera3.modules.maps.ui.snippet.view.ViewPagerBottomSheetBehavior">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_tabs"
        android:paddingTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingHorizontal="6dp"
        android:clipToPadding="false"
        android:background="@drawable/bg_mediakeyboard_tabs"
        android:nestedScrollingEnabled="false"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_pages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ui_white" />

</LinearLayout>
