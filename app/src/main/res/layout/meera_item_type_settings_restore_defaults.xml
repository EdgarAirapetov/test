<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.meera.uikit.widgets.cell.UiKitCell
        android:id="@+id/cell_privacy_restore_defaults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:cellBackgroundColor="@color/uiKitColorBackgroundSecondary"
        app:cellLeftElement="left_none"
        app:cellLeftIconAndTitleColor="@color/uiKitColorAccentWrong"
        app:cellPosition="alone"
        app:cellRightElement="right_none"
        app:cellRightElementColor="@color/uiKitColorForegroundLink"
        app:cellSubtitle="false"
        app:cellTitleValue="@string/settings_restore_defaults"
        app:cellWidthType="with_margins" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        style="@style/UiKit.Body.Description"
        android:layout_marginBottom="16dp"
        android:textColor="@color/uiKitColorForegroundSecondary"
        android:paddingTop="4dp"
        android:text="@string/settings_restore_defaults_description" />

</LinearLayout>
