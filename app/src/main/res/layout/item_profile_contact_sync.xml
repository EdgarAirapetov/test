<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="143dp"
    android:layout_height="170dp"
    android:background="@drawable/bg_profile_suggestion"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_contact_sync"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_phonebook_64" />

    <TextView
        android:id="@+id/tv_contact_sync_label"
        style="@style/BlackRegular12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="@string/contact_sync_profile_description" />

    <TextView
        android:id="@+id/tv_contact_sync"
        style="@style/WhiteRegular14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/background_rect_purple"
        android:gravity="center"
        android:paddingVertical="5dp"
        android:text="@string/synchronize" />

</LinearLayout>
