<?xml version="1.0" encoding="utf-8"?><!--<LinearLayout-->
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vg_settings_shimmer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp">

        <View
            android:id="@+id/v_image_shimmer"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/circle_shimmer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/v_first_line_shimmer"
            android:layout_width="100dp"
            android:layout_height="8dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/line_shimmer"
            app:layout_constraintStart_toEndOf="@+id/v_image_shimmer"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="132dp"
            android:layout_height="8dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/line_shimmer"
            app:layout_constraintStart_toEndOf="@+id/v_image_shimmer"
            app:layout_constraintTop_toBottomOf="@+id/v_first_line_shimmer" />

        <View
            android:id="@+id/v_shimmer_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="8dp"
            android:background="@color/shimmer_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/v_image_shimmer"
            app:layout_constraintTop_toBottomOf="@+id/v_image_shimmer" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>

