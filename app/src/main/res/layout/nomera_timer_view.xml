<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_hour1"
        android:layout_width="32dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/material8"
        app:cardBackgroundColor="#f0ebff"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="32dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toEndOf="@+id/cv_day2"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_hour1"
            style="@style/Black39Bold28"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="1" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_hour2"
        android:layout_width="32dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/material8"
        app:cardBackgroundColor="#f0ebff"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="4dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toEndOf="@+id/cv_hour1"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_hour2"
            style="@style/Black39Bold28"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="4" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_day1"
        android:layout_width="32dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="#f0ebff"
        android:layout_marginTop="@dimen/material8"
        android:layout_marginStart="@dimen/material8"
        app:layout_constraintStart_toStartOf="parent"
        app:cardElevation="0dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_day1"
            style="@style/Black39Bold28"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="2" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_day2"
        android:layout_width="32dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/material8"
        app:cardBackgroundColor="#f0ebff"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="4dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toEndOf="@+id/cv_day1"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_day2"
            style="@style/Black39Bold28"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="9" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_minute1"
        android:layout_width="32dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/material8"
        app:cardBackgroundColor="#f0ebff"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="32dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toEndOf="@+id/cv_hour2"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_minute1"
            style="@style/Black39Bold28"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="2" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_minute2"
        android:layout_width="32dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="@dimen/material8"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="#f0ebff"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/cv_minute1"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_minute2"
            style="@style/Black39Bold28"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="2" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_timer_day"
        style="@style/BlackSemibold18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timer_view_days"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/cv_day2"
        app:layout_constraintStart_toStartOf="@+id/cv_day1"
        app:layout_constraintTop_toBottomOf="@+id/cv_day2" />

    <TextView
        android:id="@+id/tv_timer_hour"
        style="@style/BlackSemibold18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timer_view_ours"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/cv_hour2"
        app:layout_constraintStart_toStartOf="@+id/cv_hour1"
        app:layout_constraintTop_toBottomOf="@+id/cv_hour1" />

    <TextView
        android:id="@+id/tv_timer_minute"
        style="@style/BlackSemibold18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timer_view_minutes"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/cv_minute2"
        app:layout_constraintStart_toStartOf="@+id/cv_minute1"
        app:layout_constraintTop_toBottomOf="@+id/cv_minute1" />


</androidx.constraintlayout.widget.ConstraintLayout>
