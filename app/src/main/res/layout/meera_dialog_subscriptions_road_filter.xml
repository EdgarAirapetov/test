<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/UiKit.Body.Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="27dp"
        android:text="@string/meera_road_filter_subscriptions_group_description"
        android:textColor="@color/uiKitColorForegroundSecondary" />

    <com.meera.uikit.widgets.cell.UiKitCell
        android:id="@+id/cell_my_communities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:cellBackgroundColor="@color/uiKitColorBackgroundSecondary"
        app:cellLeftElement="left_none"
        app:cellPosition="alone"
        app:cellRightElement="right_switch"
        app:cellRightElementColor="@color/uiKitColorForegroundLink"
        app:cellSubtitle="false"
        app:cellTitleValue="@string/my_communities"
        app:cellWidthType="with_margins" />

    <com.meera.uikit.widgets.buttons.UiKitButton
        android:id="@+id/btn_apply_subscriptions_filters"
        android:layout_margin="16dp"
        app:buttonHeightMode="buttonText48"
        android:text="@string/general_apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
