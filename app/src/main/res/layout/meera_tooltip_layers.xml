<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vg_tooltip_layers_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_tooltip_layers_message"
        style="@style/UiKit.Body.Description"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_tooltip"
        android:gravity="start"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp"
        android:text="@string/map_layers_tooltip_onboarding"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/v_tooltip_layers_pointer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/ic_meera_tooltip_down" />

    <ImageView
        android:id="@+id/v_tooltip_layers_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/meera_tooltip_layers_point" />

</LinearLayout>
