<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_layout_new_post"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_field_add_post"
        style="@style/UiGrayRegular16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginVertical="12dp"
        android:background="@drawable/gray_field"
        android:ellipsize="end"
        android:foreground="@drawable/ripple_rounded_square_10dp"
        android:minHeight="36dp"
        android:paddingHorizontal="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="9dp"
        android:singleLine="true"
        android:text="@string/road_whats_new_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_btn_add_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="4dp"
        android:background="?actionBarItemBackground"
        android:padding="8dp"
        android:src="@drawable/ic_photoround_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_field_add_post"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/ui_active_filter" />

    <View
        android:id="@+id/separator_two"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="@color/gray_separator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
