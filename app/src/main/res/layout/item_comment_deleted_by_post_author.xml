<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <com.meera.uikit.widgets.userpic.UiKitUserpicImage
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        android:id="@+id/userPhotoStub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete_comment"
        app:userpicSize="Size40"
        app:userpicStories="NoStories"/>

    <LinearLayout
        android:id="@+id/deletedCommentInfoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginVertical="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/deletedCommentReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/meera_comment_shape"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp"
            android:text="@string/comment_deleted_by_post_author"
            android:textAppearance="@style/UiKit.Body.Normal"
            android:textColor="@color/uiKitColorForegroundSecondary"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>
