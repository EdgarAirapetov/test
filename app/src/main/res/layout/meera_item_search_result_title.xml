<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_search_result_title"
        style="@style/UiKit.Header.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/uiKitColorForegroundPrimary"
        android:textSize="18sp"
        tools:text="Результаты" />

    <com.meera.uikit.widgets.buttons.UiKitButton
        android:id="@+id/btn_search_result_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="12dp"
        app:buttonHeightMode="buttonText48"
        app:buttonType="transparent"
        tools:visibility="visible"
        android:visibility="gone"
        tools:text="@string/clear_all" />

</FrameLayout>
