<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding20"
        android:orientation="horizontal">

        <com.numplates.nomera3.presentation.view.widgets.VipView
            android:id="@+id/vipView_friend_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="10dp"
            app:size="SIZE_80" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material24"
            android:layout_marginEnd="@dimen/material16"
            android:layout_marginBottom="15dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_share_friend_name"
                style="@style/BlackBold18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:maxLines="1"
                tools:text="Name" />

            <TextView
                android:id="@+id/uniqueNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:ellipsize="end"
                android:fontFamily="@font/source_sanspro_regular"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textColor="#80000000"
                android:textSize="@dimen/textSize16"
                tools:text="\@koshechka"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_user_age_loc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/source_sanspro_regular"
                android:gravity="center_vertical"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textSize16"
                android:visibility="gone"
                tools:text="25, Moscow"
                tools:visibility="visible" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/cb_share_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:buttonTint="@drawable/checkbox_color_selector" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/padding20"
        android:layout_marginEnd="@dimen/padding20"
        android:background="@color/light_separator" />
</LinearLayout>
