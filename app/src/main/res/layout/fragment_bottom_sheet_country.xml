<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/background_bottom_sheet"
    android:orientation="vertical">

    <TextView
        android:id="@+id/bottom_sheet_title"
        style="@style/BlackBold18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding20"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="@dimen/padding20"
        android:text="@string/garage_select_country" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/color_divider_gray"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_account"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/padding20"
        android:clipToPadding="false"
        android:layout_marginTop="@dimen/material8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account" />

</LinearLayout>
