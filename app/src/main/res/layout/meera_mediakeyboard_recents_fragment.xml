<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uiKitColorBackgroundSecondary">

    <LinearLayout
        android:id="@+id/vg_empty_favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/media_empty_state" />

        <TextView
            style="@style/GrayRegular18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:text="@string/recently_sent_media_will_be_stored_here"
            android:textColor="@color/ui_gray" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/vg_favorites_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp" />

        <TextView
            android:id="@+id/tv_clear_all"
            style="@style/GraphikCompactRegular.16_22"
            android:layout_width="119dp"
            android:layout_height="24dp"
            android:textColor="@color/map_friend_A6C90D"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/clear_all" />

    </LinearLayout>

</FrameLayout>
