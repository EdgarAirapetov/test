<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="64dp">

    <TextView
        android:id="@+id/tv_visitors_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        style="@style/UiKit.Header.H2"
        android:textColor="@color/black"
        tools:text="321 234 774" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        style="@style/UiKit.Header.H2"
        android:textColor="@color/black"
        tools:text="посетили твой профиль вчера" />

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        style="@style/UiKit.Body.Normal"
        android:textColor="@color/uiKitColorForegroundPrimary"
        tools:text="Это на 58 939 838 больше, чем неделю назад. Похоже, кое-кто становится популярным: продолжай в том же духе!" />

</LinearLayout>
