<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_empty_list_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/white_1000">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="118dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_empty_list"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            tools:src="@drawable/empty_vehicles" />

        <TextView
            android:id="@+id/tv_empty_list"
            style="@style/GrayRegular18"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            tools:text="@string/placeholder_empty_blacklist_friends" />

        <TextView
            android:id="@+id/tv_button_empty_list"
            style="@style/PurpleSemiBold16"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:foreground="@drawable/ripple_background_23"
            android:gravity="center"
            android:padding="12dp"
            android:textAllCaps="true"
            tools:text="Add vehicle" />

    </LinearLayout>




</LinearLayout>
