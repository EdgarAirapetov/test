<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vg_row_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="4dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_header_row_selector"
        style="@style/BlackSemibold18"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginStart="@dimen/material16"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="@dimen/material16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Кто может вам звонить?" />

    <View
        android:id="@+id/view_header_divider"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:visibility="gone"
        android:layout_marginTop="12dp"
        android:background="@color/colorGrayC7C7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_header_row_selector" />


    <TextView
        android:id="@+id/tv_menu_1"
        style="@style/BlackRegular16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="@dimen/material8"
        android:paddingBottom="@dimen/material8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_header_divider"
        tools:text="Все" />

    <ImageView
        android:id="@+id/iv_menu_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/material16"
        android:visibility="gone"
        tools:visibility="visible"
        android:src="@drawable/ic_confirm_ui_purple"
        app:layout_constraintBottom_toBottomOf="@+id/tv_menu_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_menu_1" />

    <View
        android:id="@+id/view11"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="1dp"
        android:background="@color/colorGrayC7C7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_menu_1" />


    <TextView
        android:id="@+id/tv_menu_2"
        style="@style/BlackRegular16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:paddingStart="16dp"
        android:paddingTop="@dimen/material8"
        android:paddingEnd="16dp"
        android:paddingBottom="@dimen/material8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view11"
        tools:text="Друзья" />

    <ImageView
        android:id="@+id/iv_menu_2"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/material16"
        android:src="@drawable/ic_confirm_ui_purple"
        app:layout_constraintBottom_toBottomOf="@+id/tv_menu_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_menu_2" />

    <View
        android:id="@+id/view12"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="1dp"
        android:background="@color/colorGrayC7C7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_menu_2" />

    <TextView
        android:id="@+id/tv_menu_3"
        style="@style/BlackRegular16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:paddingStart="16dp"
        android:paddingTop="@dimen/material8"
        android:paddingEnd="16dp"
        android:paddingBottom="@dimen/material8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view12"
        tools:text="Никто" />

    <ImageView
        android:id="@+id/iv_menu_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/material16"
        android:src="@drawable/ic_confirm_ui_purple"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/tv_menu_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_menu_3" />


</androidx.constraintlayout.widget.ConstraintLayout>
