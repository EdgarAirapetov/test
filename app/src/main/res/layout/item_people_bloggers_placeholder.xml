<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:background="@drawable/bg_people_bloggers_placeholder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <ImageView
        android:layout_marginStart="12dp"
        app:srcCompat="@drawable/ic_people_recommendations_viewed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_margin="12dp"
        android:textSize="16sp"
        android:lineSpacingExtra="2sp"
        android:textColor="@color/color_soft_black"
        android:translationY="-0.94sp"
        android:fontFamily="@font/source_sanspro_regular"
        android:text="@string/people_bloggers_placeholder_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
