<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="382dp"
    android:layout_gravity="top"
    android:layout_marginTop="92dp">

    <View
        android:id="@+id/view_bg_step_bg"
        android:layout_width="match_parent"
        android:layout_height="298dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/background_white_rounded_default_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_photo_bg"
        android:layout_width="0dp"
        android:layout_height="168dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/bg_config_step_photo"
        app:layout_constraintEnd_toEndOf="@+id/view_bg_step_bg"
        app:layout_constraintStart_toStartOf="@+id/view_bg_step_bg"
        app:layout_constraintTop_toTopOf="@+id/view_bg_step_bg" />

    <ImageView
        android:id="@+id/iv_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_filled_photo_l"
        app:layout_constraintBottom_toTopOf="@+id/tv_config_step2_title"
        app:layout_constraintEnd_toEndOf="@+id/view_photo_bg"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/view_photo_bg"
        app:layout_constraintTop_toTopOf="@+id/view_photo_bg"
        app:layout_constraintVertical_chainStyle="packed"
        app:tint="@color/uiKitColorForegroundLink" />


    <TextView
        android:id="@+id/tv_config_step2_title"
        style="@style/UiKit.Body.Description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="42dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/meera_configuratoin_step2_title"
        android:textColor="@color/uiKitColorForegroundLink"
        app:layout_constraintBottom_toBottomOf="@+id/view_photo_bg"
        app:layout_constraintEnd_toEndOf="@+id/view_photo_bg"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/view_photo_bg"
        app:layout_constraintTop_toBottomOf="@+id/iv_placeholder" />

    <TextView
        android:id="@+id/tv_config_step2_category"
        style="@style/UiKit.Display.Caps_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="@string/map_layers_events_header_type"
        android:textColor="@color/uiKitColorForegroundSecondary"
        app:layout_constraintStart_toStartOf="@+id/view_photo_bg"
        app:layout_constraintTop_toBottomOf="@+id/view_photo_bg" />

    <TextView
        android:id="@+id/tv_config_step2_date"
        style="@style/UiKit.Display.Caps_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:text="@string/map_layers_events_header_date"

        android:textColor="@color/uiKitColorForegroundSecondary"
        app:layout_constraintStart_toEndOf="@+id/tv_config_step2_category"
        app:layout_constraintTop_toBottomOf="@+id/view_photo_bg" />

    <TextView
        android:id="@+id/tv_config_step2_time"
        style="@style/UiKit.Display.Caps_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:text="@string/map_layers_events_header_time"
        android:textColor="@color/uiKitColorForegroundSecondary"
        app:layout_constraintStart_toEndOf="@+id/tv_config_step2_date"
        app:layout_constraintTop_toBottomOf="@+id/view_photo_bg" />


    <View
        android:id="@+id/view_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorE1E4E6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_config_step2_category" />


    <TextView
        android:id="@+id/tv_config_step2_event_name"
        style="@style/UiKit.Header.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/map_events_configuration_title_hint"
        android:textAllCaps="false"
        android:textColor="@color/uiKitColorForegroundSecondary"
        app:layout_constraintStart_toStartOf="@+id/tv_config_step2_category"
        app:layout_constraintTop_toBottomOf="@+id/view_divider" />

    <TextView
        android:id="@+id/tv_config_step2_event_description"
        style="@style/UiKit.Body.Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/map_events_configuration_description_hint"
        android:textAllCaps="false"
        android:textColor="@color/uiKitColorForegroundSecondary"
        app:layout_constraintStart_toStartOf="@+id/tv_config_step2_category"
        app:layout_constraintTop_toBottomOf="@+id/tv_config_step2_event_name" />


</androidx.constraintlayout.widget.ConstraintLayout>

