<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_map_bottomsheet"
    android:orientation="vertical"
    android:paddingBottom="24dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/meera_img_map_events_onboarding" />

    <TextView
        style="@style/UiKit.Header.H2"
        android:textColor="@color/uiKitColorBackgroundInvers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/map_events_share_title" />

    <TextView
        style="@style/UiKit.Body.Normal"
        android:textColor="@color/uiKitColorBackgroundInvers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="2sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/map_events_share_text" />

    <com.meera.uikit.widgets.buttons.UiKitButton
        android:id="@+id/tv_event_share_enable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="16dp"
        android:text="@string/map_events_share_action" />

    <TextView
        android:id="@+id/tv_event_share_skip"
        style="@style/UiKit.Body.Normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/uiKitColorForegroundLink"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/map_events_share_skip" />

</LinearLayout>
