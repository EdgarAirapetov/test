<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.meera.uikit.widgets.cell.UiKitCell
        android:id="@+id/v_band_members"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cellLeftElement="left_icon"
        app:cellLeftIconSrc="@drawable/ic_outlined_delete_m"
        app:cellTitleValue="@string/community_delete_text"
        tools:cellCityValue=""
        app:cellBackgroundColor="@color/uiKitColorBackgroundSecondary"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:cellLeftIconAndTitleColor="@color/uiKitColorLegacyAccentSecondary">
        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/pb_delete_group"
            style="?android:attr/progressBarStyleSmall"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:indeterminateTint="@color/uiKitColorForegroundLightGreen"
            android:visibility="gone"
            tools:visibility="visible" />
    </com.meera.uikit.widgets.cell.UiKitCell>

</androidx.appcompat.widget.LinearLayoutCompat>
