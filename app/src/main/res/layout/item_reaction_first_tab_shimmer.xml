<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="12dp"
    android:orientation="horizontal"
    android:paddingBottom="4dp">

    <View
        android:id="@+id/v_reaction_3"
        android:layout_width="@dimen/reaction_bottom_sheet_vertical_icon_size"
        android:layout_height="@dimen/reaction_bottom_sheet_vertical_icon_size"
        android:layout_marginStart="-15dp"
        android:background="@drawable/circle_shimmer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/v_reaction_2"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_reaction_2"
        android:layout_width="@dimen/reaction_bottom_sheet_vertical_icon_size"
        android:layout_height="@dimen/reaction_bottom_sheet_vertical_icon_size"
        android:layout_marginStart="-15dp"
        android:background="@drawable/circle_shimmer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/v_reaction_1"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_reaction_1"
        android:layout_width="@dimen/reaction_bottom_sheet_vertical_icon_size"
        android:layout_height="@dimen/reaction_bottom_sheet_vertical_icon_size"
        android:background="@drawable/circle_shimmer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_count"
        android:layout_width="@dimen/offset_44dp"
        android:layout_height="16dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="4dp"
        android:background="@color/shimmer_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/v_reaction_3"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

