<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/empty_list_placeholder_container"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_empty_list_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        app:tint="@color/ui_light_gray"
        tools:src="@drawable/vector_icongroups" />

    <TextView
        android:id="@+id/tv_empty_list_text"
        style="@style/GrayRegular18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        tools:text="@string/share_empty_group_placeholder" />

    <TextView
        android:id="@+id/tv_empty_list_button"
        style="@style/PurpleSemiBold18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/ripple_background_23"
        android:padding="6dp"
        android:textAllCaps="true"
        tools:text="@string/find_group" />

</LinearLayout>