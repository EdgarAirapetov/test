<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_chat_request"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ui_white"
    android:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout">

    <TextView
        style="@style/UiKit.Body.Normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/chat_request_menu_bar_description"
        android:textColor="@color/uiKitColorForegroundPrimary"
        android:textSize="16sp" />

    <com.meera.uikit.widgets.buttons.UiKitButton
        android:id="@+id/btn_allow_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="@string/general_allow"
        app:buttonHeightMode="buttonText48" />

    <com.meera.uikit.widgets.buttons.UiKitButton
        android:id="@+id/btn_forbid_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/meera_bg_button_outline_wrong"
        android:text="@string/user_complain_additional_block"
        app:buttonHeightMode="buttonText48"
        app:buttonType="outline" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/uiKitColorBackgroundSecondary" />

</merge>

