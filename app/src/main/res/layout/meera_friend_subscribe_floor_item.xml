<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    tools:background="@color/white">

    <com.meera.uikit.widgets.buttons.UiKitButton
        android:id="@+id/btn_add_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_outlined_user_add_m"
        app:buttonHeightMode="buttonIcon48"
        app:buttonType="outline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.meera.uikit.widgets.buttons.UiKitButton
        android:id="@+id/btn_subscribe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:text="@string/general_subscribe"
        app:buttonHeightMode="buttonText48"
        app:layout_constraintEnd_toStartOf="@+id/btn_recommendations"
        app:layout_constraintStart_toEndOf="@+id/btn_add_friend"
        app:layout_constraintTop_toTopOf="parent" />


    <com.meera.uikit.widgets.buttons.UiKitButton
        android:id="@+id/btn_recommendations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_outlined_chevron_down_m"
        app:buttonHeightMode="buttonIcon48"
        app:buttonType="outline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_subscribe" />

</androidx.constraintlayout.widget.ConstraintLayout>
