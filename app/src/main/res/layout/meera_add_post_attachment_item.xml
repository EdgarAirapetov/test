<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="80dp">

    <com.numplates.nomera3.modules.uploadpost.ui.view.ScrollableImageView
        android:id="@+id/iv_media_attachment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:minWidth="40dp"
        android:scaleType="matrix"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/dialog_gift"
        tools:visibility="visible" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:cardBackgroundColor="#26000000"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_media_attachment"
        app:layout_constraintEnd_toEndOf="@+id/iv_media_attachment"
        app:layout_constraintStart_toStartOf="@+id/iv_media_attachment"
        app:layout_constraintTop_toTopOf="@+id/iv_media_attachment"
        tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_play_button_gray" />

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_edit_attachment_complaint"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_complaint_button_image_post"
        android:clickable="true"
        android:focusable="true"
        android:padding="4dp"
        android:src="@drawable/ic_filled_pencil_s"
        android:tint="@color/uiKitColorForegroundInvers"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_media_attachment"
        app:layout_constraintEnd_toEndOf="@+id/iv_media_attachment"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_delete_attachment_complaint"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        android:background="@drawable/bg_complaint_button_image_post"
        android:tint="@color/uiKitColorForegroundInvers"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_outlined_close_s"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/iv_media_attachment"
        app:layout_constraintTop_toTopOf="@+id/iv_media_attachment"
        tools:visibility="visible" />

    <ProgressBar
        android:id="@+id/pb_attachment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:indeterminateTint="@color/white_1000"
        android:padding="2dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_media_attachment"
        app:layout_constraintEnd_toEndOf="@+id/iv_media_attachment"
        app:layout_constraintStart_toStartOf="@+id/iv_media_attachment"
        app:layout_constraintTop_toTopOf="@+id/iv_media_attachment" />

</androidx.constraintlayout.widget.ConstraintLayout>
