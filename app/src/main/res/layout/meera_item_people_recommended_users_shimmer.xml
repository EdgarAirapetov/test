<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_shimmer_recommended_people"
        style="@style/UiKit.Header.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="@string/people_possible_friends"
        android:textColor="@color/uiKitColorForegroundPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/vg_shimmer_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:cardBackgroundColor="@color/uiKitColorBackgroundSecondary"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_shimmer_recommended_people">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/v_shimmer_recommended_avatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/circle_shimmer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="@id/v_shimmer_recommended_avatar"
                    app:layout_constraintStart_toEndOf="@id/v_shimmer_recommended_avatar"
                    app:layout_constraintTop_toTopOf="@id/v_shimmer_recommended_avatar">

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="8dp"
                        app:cardBackgroundColor="@color/shimmer_color"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="8dp"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="@color/shimmer_color"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="8dp"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="@color/shimmer_color"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="284dp"
                    android:layout_height="36dp"
                    android:layout_margin="12dp"
                    app:cardBackgroundColor="@color/shimmer_color"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/v_shimmer_recommended_avatar" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        app:cardBackgroundColor="@color/uiKitColorBackgroundSecondary"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toEndOf="@id/vg_shimmer_card"
        app:layout_constraintTop_toBottomOf="@id/tv_shimmer_recommended_people">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/v_shimmer_recommended_avatar_two"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/circle_shimmer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="@id/v_shimmer_recommended_avatar_two"
                    app:layout_constraintStart_toEndOf="@id/v_shimmer_recommended_avatar_two"
                    app:layout_constraintTop_toTopOf="@id/v_shimmer_recommended_avatar_two">

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="8dp"
                        app:cardBackgroundColor="@color/shimmer_color"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="8dp"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="@color/shimmer_color"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="8dp"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="@color/shimmer_color"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="284dp"
                    android:layout_height="36dp"
                    android:layout_margin="12dp"
                    app:cardBackgroundColor="@color/shimmer_color"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/v_shimmer_recommended_avatar_two" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
