<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="4dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lav_reaction_3"
        android:layout_width="@dimen/reaction_bottom_sheet_vertical_icon_size"
        android:layout_height="@dimen/reaction_bottom_sheet_vertical_icon_size"
        android:layout_gravity="center"
        android:layout_marginStart="-13dp"
        android:adjustViewBounds="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/lav_reaction_2"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_loop="true"
        tools:src="@drawable/reaction_green_light"
        tools:visibility="visible" />

    <View
        android:id="@+id/v_reaction_2_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@drawable/circle_white_bg"
        app:layout_constraintBottom_toBottomOf="@id/lav_reaction_2"
        app:layout_constraintEnd_toEndOf="@id/lav_reaction_2"
        app:layout_constraintStart_toStartOf="@id/lav_reaction_2"
        app:layout_constraintTop_toTopOf="@id/lav_reaction_2" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lav_reaction_2"
        android:layout_width="@dimen/reaction_bottom_sheet_vertical_icon_size"
        android:layout_height="@dimen/reaction_bottom_sheet_vertical_icon_size"
        android:layout_gravity="center"
        android:layout_marginStart="-13dp"
        android:adjustViewBounds="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/lav_reaction_1"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_loop="true"
        tools:src="@drawable/reaction_green_light"
        tools:visibility="visible" />

    <View
        android:id="@+id/v_reaction_1_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@drawable/circle_white_bg"
        app:layout_constraintBottom_toBottomOf="@id/lav_reaction_1"
        app:layout_constraintEnd_toEndOf="@id/lav_reaction_1"
        app:layout_constraintStart_toStartOf="@id/lav_reaction_1"
        app:layout_constraintTop_toTopOf="@id/lav_reaction_1" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lav_reaction_1"
        android:layout_width="@dimen/reaction_bottom_sheet_vertical_icon_size"
        android:layout_height="@dimen/reaction_bottom_sheet_vertical_icon_size"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_loop="true"
        tools:src="@drawable/reaction_green_light"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_count"
        style="@style/Gray80Semibold16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingStart="2dp"
        android:paddingEnd="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/lav_reaction_3"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/date/hhmm" />
</androidx.constraintlayout.widget.ConstraintLayout>
