<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="0dp"
    app:cardCornerRadius="@dimen/corner_radius_default">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_moment_item_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shadow_moment_item" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:padding="6dp">

        <TextView
            android:id="@+id/tv_moment_item_place_name"
            style="@style/WhiteSemiBold14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Museum of Lorem Ipsum" />

        <TextView
            android:id="@+id/tv_moment_item_place_distance"
            style="@style/WhiteRegular14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="5 km" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
