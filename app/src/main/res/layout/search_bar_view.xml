<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vg_searchbar_container"
    android:background="@drawable/friend_list_searchbar_background"
    android:layout_marginTop="@dimen/material8"
    android:layout_marginBottom="@dimen/material12"
    android:layout_width="match_parent"
    android:layout_height="36dp">

    <EditText
        android:drawableStart="@drawable/ic_search_bar"
        android:drawablePadding="8dp"
        android:id="@+id/et_search_input"
        android:textColorHint="@color/ui_gray"
        style="@style/SearchBarTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:background="@null"
        android:hint="@string/chat_find_user"
        android:inputType="text"
        android:maxLines="1"
        android:paddingVertical="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_clear_input"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:hint="Поиск"
        tools:ignore="RtlSymmetry" />

    <ImageView
        android:id="@+id/iv_clear_input"
        android:layout_gravity="center_vertical"
        android:layout_width="44dp"
        android:layout_height="36dp"
        android:paddingBottom="2dp"
        android:paddingVertical="6dp"
        android:paddingStart="8dp"
        android:paddingEnd="12dp"
        android:src="@drawable/ic_clear_input"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
