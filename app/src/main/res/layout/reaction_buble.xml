<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false">

    <FrameLayout
        android:id="@+id/fl_bubble_container"
        android:layout_width="@dimen/bubble_container_width"
        android:layout_height="@dimen/bubble_container_height"
        android:layout_marginTop="-5dp"
        android:background="@drawable/bg_reaction"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.numplates.nomera3.modules.reaction.ui.custom.HorizontalBlockedScroll
        android:id="@+id/scroll_bubble_container"
        android:layout_width="@dimen/bubble_container_scroll_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:minHeight="52dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/reaction_item_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_1"
                android:layout_width="@dimen/reaction_bar_item_size"
                android:layout_height="@dimen/reaction_bar_item_size"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_2"
                android:layout_width="@dimen/reaction_bar_item_size"
                android:layout_height="@dimen/reaction_bar_item_size"
                android:layout_marginStart="@dimen/reaction_bar_item_margin"
                android:adjustViewBounds="true"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_3"
                android:layout_width="@dimen/reaction_bar_item_size"
                android:layout_height="@dimen/reaction_bar_item_size"
                android:layout_marginStart="@dimen/reaction_bar_item_margin"
                android:adjustViewBounds="true"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_4"
                android:layout_width="@dimen/reaction_bar_item_size"
                android:layout_height="@dimen/reaction_bar_item_size"
                android:layout_marginStart="@dimen/reaction_bar_item_margin"
                android:adjustViewBounds="true"
                android:padding="@dimen/reaction_bar_item_margin"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_5"
                android:layout_width="@dimen/reaction_bar_item_size"
                android:layout_height="@dimen/reaction_bar_item_size"
                android:layout_marginStart="@dimen/reaction_bar_item_margin"
                android:adjustViewBounds="true"
                android:padding="@dimen/reaction_bar_item_margin"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_6"
                android:layout_width="@dimen/reaction_bar_item_size"
                android:layout_height="@dimen/reaction_bar_item_size"
                android:layout_marginStart="@dimen/reaction_bar_item_margin"
                android:adjustViewBounds="true"
                android:padding="@dimen/reaction_bar_item_margin"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_7"
                android:layout_width="@dimen/reaction_bar_item_size"
                android:layout_height="@dimen/reaction_bar_item_size"
                android:layout_marginStart="@dimen/reaction_bar_item_margin"
                android:adjustViewBounds="true"
                android:padding="@dimen/reaction_bar_item_margin"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_8"
                android:layout_width="@dimen/reaction_bar_item_size"
                android:layout_height="@dimen/reaction_bar_item_size"
                android:layout_marginStart="@dimen/reaction_bar_item_margin"
                android:padding="@dimen/reaction_bar_item_margin"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_9"
                android:layout_width="@dimen/reaction_bar_item_size"
                android:layout_height="@dimen/reaction_bar_item_size"
                android:layout_marginStart="@dimen/reaction_bar_item_margin"
                android:padding="@dimen/reaction_bar_item_margin"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>

        </LinearLayout>

    </com.numplates.nomera3.modules.reaction.ui.custom.HorizontalBlockedScroll>

</androidx.constraintlayout.widget.ConstraintLayout>
