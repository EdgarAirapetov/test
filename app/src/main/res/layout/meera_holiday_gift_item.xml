<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        android:backgroundTint="@color/uiKitColorBackgroundSecondary">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_gravity="start|center"
            android:layout_marginStart="12dp"
            android:layout_marginVertical="8dp"
            android:src="@drawable/ic_i_dont_know"/>

        <TextView
            android:id="@+id/tv_title"
            style="@style/UiKit.Display.Medi_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:layout_marginStart="108dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/black"
            tools:text="Тыквенный кот"
            />
        <TextView
            android:id="@+id/tv_desc"
            style="@style/UiKit.Body.Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="108dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/black"
            android:maxLines="2"
            tools:text="Подарит уют и хорошее\nнастроение"
            />
        <TextView
            android:id="@+id/tv_price"
            style="@style/UiKit.Body.Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:layout_marginStart="108dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            tools:text="99 ₽"
            android:textColor="@color/colorGray9298A0"
            />

    </androidx.cardview.widget.CardView>

</LinearLayout>
