<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_vip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_black"
    android:orientation="vertical"
    android:gravity="bottom"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_bottom_sheet"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BlackBold18"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="13dp"
            android:layout_marginStart="@dimen/padding20"
            android:text="@string/upgrade_account"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@color/color_divider_gray"/>


        <LinearLayout
            android:id="@+id/weekVipItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding20"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvWeekDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BlackRegular16" />

            <TextView
                android:id="@+id/tvWeekPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/material8"
                style="@style/PurpleSemiBold16" />


        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/padding20"
            android:layout_marginTop="@dimen/material16"
            android:src="@color/color_divider_gray"/>


        <LinearLayout
            android:id="@+id/monthVipItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="@dimen/padding20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMonthDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BlackRegular16" />

            <TextView
                android:id="@+id/tvMonthPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/material8"
                style="@style/PurpleSemiBold16" />

        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/padding20"
            android:layout_marginTop="@dimen/material16"
            android:src="@color/color_divider_gray"/>


        <LinearLayout
            android:id="@+id/threeMonthVipItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="@dimen/padding20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvThreeMonthDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BlackRegular16" />

            <TextView
                android:id="@+id/tvThreeMonthPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/material8"
                style="@style/PurpleSemiBold16" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/padding20"
            android:layout_marginTop="@dimen/material16"
            android:src="@color/color_divider_gray"/>


        <LinearLayout
            android:id="@+id/yearVipItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="17dp"
            android:layout_marginStart="@dimen/padding20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvYearDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BlackRegular16" />

            <TextView
                android:id="@+id/tvYearPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/material8"
                style="@style/PurpleSemiBold16" />

        </LinearLayout>



    </LinearLayout>


</LinearLayout>