<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/alPlate"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="@drawable/number_editor_gray_background"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingTop="6dp"
        android:paddingEnd="8dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/tv_number"
            style="@style/numplate_input_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:hint="000"
            android:maxLength="3"
            android:letterSpacing="0.15"
            android:paddingEnd="5dp"
            android:paddingStart="10dp"
            android:imeOptions="actionDone"
            android:textAllCaps="true"
            android:textSize="36sp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/tv_suffix"
            style="@style/numplate_input_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:paddingStart="5dp"
            android:paddingEnd="10dp"
            android:hint="AA"
            android:maxLength="2"
            android:letterSpacing="0.15"
            android:imeOptions="actionDone"
            android:textAllCaps="true"
            android:textSize="36sp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/tv_region"
        style="@style/numplate_input_number_gray"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/number_editor_gray_background"
        android:cursorVisible="false"
        android:hint="00"
        android:maxLength="2"
        android:letterSpacing="0.15"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:paddingStart="4dp"
        android:paddingTop="6dp"
        android:paddingEnd="4dp"
        android:saveEnabled="false"
        android:textAllCaps="true"
        android:textSize="36sp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/iv_country_flag"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:elevation="0dp"
        app:cardCornerRadius="10dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/gray_flag_border">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_flag_of_kazakhstan" />
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
