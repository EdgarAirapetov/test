<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mcv_item_events_list_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="@dimen/map_events_list_item_top_margin"
    app:cardCornerRadius="16dp"
    app:cardElevation="1dp">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/v_item_events_list_event_type"
                android:layout_width="97dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/radius_12_shimmer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/v_item_events_list_date_time"
                android:layout_width="93dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/radius_12_shimmer"
                app:layout_constraintStart_toEndOf="@id/v_item_events_list_event_type"
                app:layout_constraintTop_toTopOf="@id/v_item_events_list_event_type" />

            <View
                android:id="@+id/v_item_events_list_status"
                android:layout_width="93dp"
                android:layout_height="18dp"
                android:layout_marginTop="19dp"
                android:background="@drawable/radius_12_shimmer"
                app:layout_constraintStart_toStartOf="@id/v_item_events_list_event_type"
                app:layout_constraintTop_toBottomOf="@id/v_item_events_list_event_type" />

            <View
                android:id="@+id/v_item_events_list_title"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/radius_12_shimmer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/v_item_events_list_event_type"
                app:layout_constraintTop_toBottomOf="@id/v_item_events_list_status" />

            <View
                android:id="@+id/v_item_events_list_distance"
                android:layout_width="132dp"
                android:layout_height="18dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/radius_12_shimmer"
                app:layout_constraintStart_toStartOf="@id/v_item_events_list_event_type"
                app:layout_constraintTop_toBottomOf="@id/v_item_events_list_title" />

            <View
                android:id="@+id/v_item_events_list_host"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/circle_shimmer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/v_item_events_list_event_type"
                app:layout_constraintTop_toBottomOf="@id/v_item_events_list_distance" />

            <View
                android:id="@+id/v_item_events_list_participants_1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/circle_shimmer"
                app:layout_constraintBottom_toBottomOf="@id/v_item_events_list_host"
                app:layout_constraintStart_toEndOf="@id/v_item_events_list_host" />

            <View
                android:id="@+id/v_item_events_list_participants_2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="-16dp"
                android:background="@drawable/circle_shimmer"
                app:layout_constraintBottom_toBottomOf="@id/v_item_events_list_participants_1"
                app:layout_constraintStart_toEndOf="@id/v_item_events_list_participants_1" />

            <View
                android:id="@+id/v_item_events_list_participants_3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="-16dp"
                android:background="@drawable/circle_shimmer"
                app:layout_constraintBottom_toBottomOf="@id/v_item_events_list_participants_1"
                app:layout_constraintStart_toEndOf="@id/v_item_events_list_participants_2" />

            <View
                android:id="@+id/v_item_events_list_participation_background"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/radius_12_shimmer"
                app:layout_constraintBottom_toBottomOf="@id/v_item_events_list_participants_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/v_item_events_list_participants_3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

</com.google.android.material.card.MaterialCardView>
