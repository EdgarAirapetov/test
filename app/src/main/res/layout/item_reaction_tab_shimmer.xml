    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginVertical="8dp"
    android:layout_marginEnd="12dp"
    android:orientation="horizontal"
    android:paddingBottom="4dp">

    <View
        android:id="@+id/lav_reaction_3"
        android:layout_width="@dimen/reaction_bottom_sheet_vertical_icon_size"
        android:layout_height="@dimen/reaction_bottom_sheet_vertical_icon_size"
        android:layout_gravity="center"
        android:background="@drawable/circle_shimmer"
        tools:visibility="visible" />

    <View
        android:layout_width="@dimen/offset_44dp"
        android:layout_height="16dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="4dp"
        android:background="@color/shimmer_color" />
</LinearLayout>

