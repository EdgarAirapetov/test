<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_closed_profile_header"
        style="@style/UiKit.Header.Subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:text="@string/settings_profile_title" />

    <com.meera.uikit.widgets.cell.UiKitCell
        android:id="@+id/cell_privacy_closed_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:cellBackgroundColor="@color/uiKitColorBackgroundSecondary"
        app:cellLeftElement="left_none"
        app:cellPosition="alone"
        app:cellRightElement="right_switch"
        app:cellRightElementColor="@color/uiKitColorForegroundLink"
        app:cellSubtitle="false"
        app:cellTitleValue="@string/settings_profile_close_profile"
        app:cellWidthType="with_margins" >

        <View
            android:id="@+id/v_check_box"
            android:layout_width="40dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    </com.meera.uikit.widgets.cell.UiKitCell>

    <TextView
        android:id="@+id/tv_closed_profile_hint"
        style="@style/Legacy.Body.Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:paddingTop="4dp"
        android:text="@string/settings_profile_close_profile_hint_redesigned"
        android:textColor="@color/uiKitColorForegroundSecondary" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp"/>
</LinearLayout>
