<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <include
        android:id="@+id/layout_map_layers_main"
        layout="@layout/meera_layout_layers_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/map_events_layers_height"
        android:visibility="visible" />

    <include
        android:id="@+id/layout_map_layers_events"
        layout="@layout/meera_layout_layers_event_filters"
        android:layout_width="match_parent"
        android:layout_height="@dimen/map_events_layers_height"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>
