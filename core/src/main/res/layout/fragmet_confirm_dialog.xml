<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_confirm_dialog_header"
        style="@style/BlackSemibold20"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text=" asdfbadjhsbf slj \n asdhfbajsdfajsd" />

    <TextView
        android:id="@+id/tv_confirm_dialog_txt"
        style="@style/GrayRegular16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_confirm_dialog_header"
        app:layout_constraintTop_toBottomOf="@+id/tv_confirm_dialog_header"
        tools:text="afubwiefaefb wefaewyf aiuweyfg aiwueyfg aisudyfg siuea griyg gy g sgsyue dfy bgsgdfyu" />

    <TextView
        android:id="@+id/tv_left_btn"
        style="@style/SansProSemiBold14Purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="@dimen/material8"
        android:background="?attr/selectableItemBackground"
        android:paddingStart="5dp"
        android:paddingTop="12dp"
        android:paddingEnd="5dp"
        android:paddingBottom="6dp"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="@+id/tv_right_btn"
        app:layout_constraintEnd_toStartOf="@+id/tv_right_btn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_confirm_dialog_txt"
        app:layout_constraintVertical_bias="1.0"
        tools:text="left btn" />

    <TextView
        android:id="@+id/tv_right_btn"
        style="@style/SansProSemiBold14Purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="@dimen/material8"
        android:layout_marginBottom="8dp"
        android:background="?attr/selectableItemBackground"
        android:paddingStart="5dp"
        android:paddingTop="12dp"
        android:paddingEnd="5dp"
        android:paddingBottom="6dp"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_confirm_dialog_txt"
        app:layout_constraintVertical_bias="0.0"
        tools:text="right btn" />

    <LinearLayout
        android:id="@+id/ll_vertical_btn_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_confirm_dialog_txt"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/tv_up_btn"
            style="@style/SansProSemiBold14Purple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/material8"
            android:background="?attr/selectableItemBackground"
            android:paddingStart="5dp"
            android:paddingTop="12dp"
            android:paddingEnd="5dp"
            android:paddingBottom="6dp"
            tools:text="up button" />

        <TextView
            android:id="@+id/tv_middle_btn"
            style="@style/SansProSemiBold14Purple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/material8"
            android:background="?attr/selectableItemBackground"
            android:paddingStart="5dp"
            android:paddingTop="12dp"
            android:paddingEnd="5dp"
            android:paddingBottom="6dp"
            tools:text="middle button" />

        <TextView
            android:id="@+id/tv_bottom_btn"
            style="@style/SansProSemiBold14Purple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/material8"
            android:background="?attr/selectableItemBackground"
            android:paddingStart="5dp"
            android:paddingTop="12dp"
            android:paddingEnd="5dp"
            android:paddingBottom="17dp"
            tools:text="bottom button" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>