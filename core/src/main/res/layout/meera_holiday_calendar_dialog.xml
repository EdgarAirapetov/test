<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/ui_white">

    <ImageView
        android:id="@+id/iv_gift_pic"
        android:layout_width="172dp"
        android:layout_height="172dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_launcher_change_settings"/>

    <TextView
        android:id="@+id/tv_count_day"
        style="@style/UiKit.Body.Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_gift_pic"
        android:textColor="@color/color_soft_black"
        android:layout_marginTop="12dp"
        tools:text="3 из 7"/>

    <TextView
        android:id="@+id/tv_gift_description"
        style="@style/UiKit.Body.Normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_count_day"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/color_soft_black"
        tools:text="Заходи в приложение семь дней подряд, чтобы собрать весь подарок «Новогодние леденцы» и получить его в коллекцию"/>

    <com.meera.uikit.widgets.buttons.UiKitButton
        android:id="@+id/v_confirmation_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_gift_description"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        tools:text="Да здравствуют леденцы!"/>

</androidx.constraintlayout.widget.ConstraintLayout>
